from optparse import OptionParser
import logging
import os
import sys

from gi.repository import Gtk

if __name__ == "__main__":

    parser = OptionParser("usage: %prog [options] package",
                          version="%prog ")
    parser.add_option("--debug", action="store_true",
                      help="enable debug mode", default=False)
    (options, args) = parser.parse_args()

    if options.debug:
        logging.basicConfig(level = logging.DEBUG,
                            format = '%(levelname)s (%(asctime)s): %(message)s',
                            datefmt = '%H:%M:%S')
    else:
        logging.basicConfig(level = logging.INFO,
                            format = '%(levelname)s (%(asctime)s): %(message)s',
                            datefmt = '%H:%M:%S')

    if os.path.exists("../data"):
        logging.info("Running locally, AppIndicator icons might be missing.")
        datadir = "../data"
        sys.path.insert(0, "..")
    else:
        # A bit more flexible setting of datadir, it works
        # when base install path is not /usr
        curpath = os.path.abspath(__file__)
        datadir = curpath.split('bin/')[0] + "share/kazam/"

    from kazam.app import KazamApp

    logging.debug("Starting ...")
    appWindow = KazamApp(datadir, options.debug)
    appWindow.show_all()
    Gtk.main()
    logging.debug("Finishing ...")
